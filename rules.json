{
    "rules": {
      "users": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      },
      "status": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      },
      "typing": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      },
      "messages": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$message": {
          ".validate": "newData.hasChildren(['senderId', 'senderName', 'timestamp', 'type']) && newData.child('senderId').val() == auth.uid && newData.child('senderName').isString() && newData.child('timestamp').isNumber() && newData.child('type').val().matches(/^(text|image|file)$/)"
        }
      }
    }
  }